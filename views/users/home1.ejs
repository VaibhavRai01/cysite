<script src="./particles.js"></script>
    <script src="./app.js"></script>
    <script src="./slider.js"></script>
    <script>
    const eventsDiv = document.getElementById('eventscontainer');
    const increaseButton = document.getElementById('increaseButton');

    let divHeight = 100; // Initial height in vh units

    increaseButton.addEventListener('click', () => {
        const scrollHeight = eventsDiv.scrollHeight;
        const clientHeight = eventsDiv.clientHeight;

        if (scrollHeight > clientHeight+100) {
            divHeight += 100; // Increase height by 100vh on each click
            eventsDiv.style.height = `${divHeight}vh`;
        }
        if (scrollHeight <= clientHeight) {
            divHeight=scrollHeight;
            increaseButton.style.display = 'none'; // Hide the circular button
    }
    });
    </script>
