<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./login.css">
    <title>Loginpage</title>
</head>
<body>

<div class = "Loginform">
    <h1 id="heading">Access your account</h1>
    <%
    if(typeof message !== 'undefined'){
        %>
            <h4 id="servermsg"><%= message %></h4>
        <%
    }
    %>
    <br>
    <form action="/login" method="post">
        <div class="input-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" placeholder="Enter your email address" required>
        </div>
        <br>
        <div class="input-group">
            <label for="password">Password</label>
            <input type="password" name="password" required placeholder="Enter password">
        </div>
        <a href="/forget" id = "forgettext">Forgot Password?</a>
        <a href="/verification" id="verify">Get Verified</a>    
        <br>
        <div class = "login-button">
            <input type="submit" class="buttonoriginal" value="Login">
        </div>
        <a href="/register" id = "reg">Don't have an account? Register</a>
    </form>
   
   
</div>


<% include('../layouts/footer.ejs') %>





